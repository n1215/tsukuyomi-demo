{
    "name": "n1215/tsukuyomi-demo",
    "description": "A PSR-7/PSR-15 minimal web framework demo.",
    "keywords": [
        "psr-15",
        "psr-7",
        "http",
        "framework",
        "web"
    ],
    "type": "project",
    "homepage": "https://github.com/n1215/tsukuyomi-demo",
    "license": "MIT",
    "authors": [
        {
            "name": "n1215",
            "email": "knakae1215@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "n1215/tsukuyomi": "^0.4",
        "n1215/jugoya": "^0.7",
        "n1215/hakudo": "^0.4",
        "vlucas/phpdotenv": "^2.4",
        "illuminate/container": "^5.5",
        "zendframework/zend-diactoros": "^1.4",
        "monolog/monolog": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "rm -rf ./build",
            "mkdir ./build",
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage --coverage-clover=build/coverage.clover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
